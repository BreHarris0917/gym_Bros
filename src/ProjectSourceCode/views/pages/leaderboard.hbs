<!DOCTYPE html>
<html lang="en">
<head>
    {{> header }} <!--Header template from head.hbs-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"> <!--Using bootstrap for styling-->
    <script src="../../resources/js/script.js"></script>
</head>
<body>
     {{> message}}
    <div class="container mt-5">
        <h1 class="text-center my-4">Leaderboard</h1>

        {{#if leaderboard}}
        <div class="container">
            <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Fitness Points</th>
                </tr>
                </thead>
                <tbody>
                {{#each leaderboard}}
                    <tr>
                    <td>{{add @index 1}}</td> <!-- Adds 1 to the index -->
                    <td>
                        {{this.username}}
                        {{#ifCond @index '==' 0}} <!-- First place -->
                        <span class="badge badge-warning">ðŸ¥‡</span>
                        {{else ifCond @index '==' 1}} <!-- Second place -->
                        <span class="badge badge-secondary">ðŸ¥ˆ</span>
                        {{else ifCond @index '==' 2}} <!-- Third place -->
                        <span class="badge badge-bronze">ðŸ¥‰</span>
                        {{/ifCond}}
                    </td>
                    <td>{{this.fitness_points}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
            </div>
        </div>
        {{else}}
        <p class="text-center">No leaderboard data available.</p>
        {{/if}}

    </div>

    {{> footer}}

</body>
</html>