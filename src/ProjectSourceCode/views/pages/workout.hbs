            { title: "30-Minute Cardio Challenge", link: "https://www.youtube.com/watch?v=dF7T6AHMenk", description: "Get your heart rate up and keep moving with a full 30-minute cardio session packed with variety and energy." },
            { title: "Gentle Yoga Flow", link: "https://www.youtube.com/watch?v=v7AYKMP6rOE", description: "A beginner-friendly yoga sequence focusing on gentle stretches and relaxation to leave you feeling refreshed." }
        ];

        // Function to render workout links
        function renderWorkouts() {
            const workoutList = document.getElementById('workoutList');
            workouts.forEach(workout => {
                const listItem = document.createElement('li');
                listItem.classList.add('mb-4', 'p-3', 'border', 'rounded', 'shadow-sm', 'bg-light');

                const link = document.createElement('a');
                link.href = workout.link;
                link.target = "_blank";
                link.innerText = workout.title;

                const description = document.createElement('p');
                description.innerText = workout.description;

                listItem.appendChild(link);
                listItem.appendChild(description);
                workoutList.appendChild(listItem);
            });
        }

        // Call the function to render the workouts
        renderWorkouts();
    </script>
</body>
</html>
