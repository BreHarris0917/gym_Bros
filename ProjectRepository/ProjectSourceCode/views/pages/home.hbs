<!DOCTYPE html>
<html lang="en">
<head>
    {{> header }} <!--Header template from head.hbs-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"> <!--Using bootstrap for styling-->
    <script src="../../resources/js/script.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Gym Bros</h1>
        <!--Card container for the profile-->
        <div class="card shadow-sm">
            <div class="card-header text-white bg-primary">
                <h5 class="mb-0">Your Profile</h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless mb-0">
                    <tbody>
                        <tr>
                            <td><strong>First name:</strong></td>
                            <td>{{firstName}}</td>
                        </tr>
                        <tr>
                            <td><strong>Last name:</strong></td>
                            <td>{{lastName}}</td>
                        </tr>
                        <tr>
                            <td><strong>Email:</strong></td>
                            <td>{{email}}</td>
                        </tr>
                        <tr>
                            <td><strong>Username:</strong></td>
                            <td>{{username}}</td>
                        </tr>
                        <tr>
                            <td><strong>Password:</strong></td>
                            <td><input type="password" id="password" value="{{password}}" class="form-control" readonly></td>
                            <td colspan="4"><button type="button" class="btn btn-primary" onclick="toggle()">Show/Hide</button></td>
                        </tr>
                        <tr>
                            <td><strong>Age:</strong></td>
                            <td>{{age}}</td>
                        </tr>
                        <tr>
                            <td><strong>Height:</strong></td>
                            <td>{{height_feet}}</td>
                        </tr>
                        <tr>
                            <td><strong>Height:</strong></td>
                            <td>{{height_inch}}</td>
                        </tr>
                        <tr>
                            <td><strong>Weight:</strong></td>
                            <td>{{weight}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {{> footer}}

    <script>
       function toggle() {
    const passwordElement = document.getElementById("password");
    if (passwordElement.type === "password") {
        passwordElement.type = "text"; 
    } else {
        passwordElement.type = "password"; 
    }
}
    </script>

</body>
</html>